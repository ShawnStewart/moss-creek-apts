---
import ContactCard from '../components/ContactCard.astro';
import PageSection from '../layouts/PageSection.astro';

export interface Props {
    hideSeparator?: boolean;
}

const { hideSeparator = false } = Astro.props;
---

<PageSection id="contact-us" title="Contact Us" hideSeparator={hideSeparator} invert>
    <ContactCard title="Call Now">
        <a href="tel:555-555-5555" class="underline text-blue-600 hover:text-blue-800 visited:text-purple-600"
            >555-555-5555</a
        >
    </ContactCard>

    <ContactCard title="Address">
        <address class="my-2">
            <div>1626 University Avenue</div>
            <div>USA</div>
            <div>Columbia, MO 65201</div>
        </address>
        <div class="card-actions">
            <a
                href="https://www.google.com/maps/dir//Moss+Creek+Apartments/data=!4m8!4m7!1m0!1m5!1m1!1s0x87dcb7ed0298db93:0x3414fa00783ea44f!2m2!1d-92.314745!2d38.9459865"
                class="btn btn-secondary btn-sm">Get Directions</a
            >
        </div>
    </ContactCard>

    <ContactCard title="Business Hours">
        <table id="business-hours-table" class="table table-compact [&>tbody>tr>td]:bg-white">
            <tbody>
                <tr>
                    <td>Mon:</td>
                    <td>8:00 AM - 5:00 PM</td>
                </tr>
                <tr>
                    <td>Tue:</td>
                    <td>8:00 AM - 5:00 PM</td>
                </tr>
                <tr>
                    <td>Wed:</td>
                    <td>8:00 AM - 5:00 PM</td>
                </tr>
                <tr>
                    <td>Thu:</td>
                    <td>8:00 AM - 5:00 PM</td>
                </tr>
                <tr>
                    <td>Fri:</td>
                    <td>8:00 AM - 5:00 PM</td>
                </tr>
                <tr>
                    <td>Sat:</td>
                    <td>10:00 AM - 12:00 PM</td>
                </tr>
                <tr>
                    <td>Sun:</td>
                    <td>10:00 AM - 12:00 PM</td>
                </tr>
            </tbody>
        </table>
    </ContactCard>
</PageSection>
<script>
    const tableRows = document.querySelectorAll('#business-hours-table > tbody > tr');
    const day = new Date().getDay() + 6;
    tableRows[day % 7]?.classList.add('active');
</script>
