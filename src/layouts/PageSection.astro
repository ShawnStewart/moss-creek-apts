---
export interface Props {
    children: any;
    hideSeparator?: boolean;
    title: string;
}

const { hideSeparator = false, title } = Astro.props;
---

<section class="p-4">
    {!hideSeparator && <hr class="max-w-[5rem] mx-auto my-4 border-black" />}
    <h2 class="text-2xl text-center font-medium uppercase mb-12">
        {title}
    </h2>
    <slot />
</section>
